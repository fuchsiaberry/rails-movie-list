<h2>Add a movie to: <%= @list.name %></h2>


<%= simple_form_for [@list, @bookmark] do |b| %>
  <%= b.association :movie,
      collection: Movie.all,
      prompt: "Select a movie"
   %>
  <%= b.input :comment %>
  <%= b.submit "Add movie" %>
<% end %>

<%= link_to "Back to list", list_path(@list) %>
